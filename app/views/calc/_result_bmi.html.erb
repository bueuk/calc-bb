<div class="jumbotron" style="background-color:#CFD8DC;">
<% unless @bmi.nil? %>
  <% if params[:tinggi].to_i < 145 %>
    <h3><center>Maaf, untuk menggunakan aplikasi ini minimal tinggi badan kamu harus <strong>145 cm</strong>. Terimakasih</center></h1><p></p> 
  <% else %>
    <h3><center>Nilai BMI kamu adalah <strong>"<%= @bmi.round(1) %>"</strong></center></h3>
    <h3><center>Status berat badan kamu adalah <strong>"<%= @status_bb %>"</strong></center></h3><p></p> 
    <table class='table'>
      <thead>
        <tr>
          <th>BMI</th>
          <th>Status Berat Badan</th>
        </tr>
      </thead>
      <tbody>
        <tr class='warning'>
          <td>Kurang dari 18.5</td>
          <td>Kekurangan berat badan</td>
        </tr>
        <tr class='success'>
          <td>18.5 - 24.9</td>
          <td>Normal (ideal)</td>
        </tr>
        <tr class='warning'>
          <td>25.0 - 29.9</td>
          <td>Kelebihan berat badan</td>
        </tr>
        <tr class='danger'>
          <td>30.0 atau lebih</td>
          <td>Kegemukan (obesitas)</td>
        </tr>
      </tbody>

    </table>

  <% end %>
<% end %>
</div>
